@{
}

<table class="table table-bordered">
    <tr>
        <th> Order ID </th>
        <th> Product ID </th>
        <th> Unit Price </th>
        <th> Quantity </th>
        <th> Discount </th>
    </tr>


    @foreach (var od in ViewBag.ListOfOrderDetails)
    {
        <tr>
            <td> @od.OrderID </td>
            <td> @od.ProductID </td>
            <td> @od.UnitPrice</td>
            <td> @od.Quantity </td>
            <td> @od.Discount </td>
            <td> <a href="UpdateAOrderDetailForm?aOrderId = @od.OrderID"> Update </a> </td>
        </tr>
    }

</table>