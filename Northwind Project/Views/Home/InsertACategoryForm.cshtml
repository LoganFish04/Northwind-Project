<form action="InsertAProduct" method="Post">

    Product Name <br />
    <input type="text" id="this is for js1" class="this is for your css1" name="productName" /> <br />

    Supplier Id  <br />
    <input type="text" id="this is for js2" class="this is for your css2" name="supplierId" /> <br />

    <br /><br />

    <select name="supplierId">
        @foreach (var s in ViewBag.ListOfSuppliers)
        {
            <option value="@s.SupplierId"> @s.SupplierId @s.CompanyName </option>
        }

    </select>

    Category Id <br />
    <input type="text" id="this is for js3" class="this is for your css3" name="categoryId" /> <br />

    <br /><br />

    <select name="categoryId">
        @foreach (var c in ViewBag.ListOfCategories)
        {
            <option value="@c.CategoryID"> @c.CategoryID @c.CategoryName </option>
        }
    </select>

    Unit Price <br />
    <input type="text" id="this is for js4" class="this is for your css4" name="unitPrice" /> <br /><br />

    <input type="submit" /> <input type="reset" />


</form>